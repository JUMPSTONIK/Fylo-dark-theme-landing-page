mixin navElement(text)
    li=text

mixin benefitCard(image, title, content)
    .benefit 
        img(src="./../images/"+image+".svg", alt="")
        h2.benefit--title=title 
        p.benefit--paragraph=content 

mixin commentCard(userImg, userName)
    .comment 
        p.comment--paragraph Fylo has improved our team productivity by an order of magnitude. Since making the switch our team has become a well-oiled collaboration machine.
        .comment--profile 
            img(src="./../images/"+userImg+".jpg", alt="")
            .profile
                p.profile--username=userName
                p.profile--degree Founder & CEO, Huddle

mixin pageInfoContent(icon, text)
    .newsite
        img.newsite--logo(src="./../images/"+icon+".svg", alt="")
        p.newsite--paragraph=text


mixin footerElement(text)
    li=text